{% schema %}
{
  "name": "Therapy Section",
  "tag": "section",
  "class": "section-therapy",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "A 12 Week Corrective Therapy Routine that Provides Long-Lasting Relief"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Start correcting the source of your pain with the first use - and start feeling relief in as little as 2 weeks"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#333333"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "Subtitle Color",
      "default": "#333333"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "label": "Heading Font Size",
      "min": 18,
      "max": 48,
      "default": 36,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "subtitle_font_size",
      "label": "Subtitle Font Size",
      "min": 12,
      "max": 30,
      "default": 20,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Section Background Color",
      "default": "#eaf6f8b3"
    }
  ],
  "blocks": [
    {
      "type": "card",
      "name": "Therapy Card",
      "settings": [
        {
          "type": "text",
          "id": "week_title",
          "label": "Week Title",
          "default": "Week 1"
        },
        {
          "type": "color",
          "id": "week_title_color",
          "label": "Week Title Color",
          "default": "#005585"
        },
        {
          "type": "range",
          "id": "week_title_font_size",
          "label": "Week Title Font Size",
          "min": 14,
          "max": 36,
          "default": 24,
          "unit": "px"
        },
        {
          "type": "text",
          "id": "week_subtitle",
          "label": "Week Description",
          "default": "Conditioning & Warm-Up"
        },
        {
          "type": "color",
          "id": "week_subtitle_color",
          "label": "Week Description Color",
          "default": "#333333"
        },
        {
          "type": "range",
          "id": "week_subtitle_font_size",
          "label": "Week Description Font Size",
          "min": 14,
          "max": 36,
          "default": 26,
          "unit": "px"
        },
        {
          "type": "image_picker",
          "id": "icon_mode",
          "label": "Mode Icon"
        },
        {
          "type": "text",
          "id": "mode_text",
          "label": "Mode Text",
          "default": "Mode 1"
        },
        {
          "type": "color",
          "id": "mode_text_color",
          "label": "Mode Text Color",
          "default": "#333333"
        },
        {
          "type": "range",
          "id": "mode_text_font_size",
          "label": "Mode Text Font Size",
          "min": 10,
          "max": 24,
          "default": 14,
          "unit": "px"
        },
        {
          "type": "image_picker",
          "id": "icon_days",
          "label": "Days Icon"
        },
        {
          "type": "text",
          "id": "days_text",
          "label": "Days Text",
          "default": "4 - 7 days"
        },
        {
          "type": "color",
          "id": "days_text_color",
          "label": "Days Text Color",
          "default": "#333333"
        },
        {
          "type": "range",
          "id": "days_text_font_size",
          "label": "Days Text Font Size",
          "min": 10,
          "max": 24,
          "default": 14,
          "unit": "px"
        },
        {
          "type": "image_picker",
          "id": "icon_minutes",
          "label": "Minutes Icon"
        },
        {
          "type": "text",
          "id": "minutes_text",
          "label": "Minutes Text",
          "default": "25 minutes per session"
        },
        {
          "type": "color",
          "id": "minutes_text_color",
          "label": "Minutes Text Color",
          "default": "#333333"
        },
        {
          "type": "range",
          "id": "minutes_text_font_size",
          "label": "Minutes Text Font Size",
          "min": 10,
          "max": 24,
          "default": 14,
          "unit": "px"
        }
      ]
    }
  ],
  "max_blocks": 3,
  "presets": [
    {
      "name": "Therapy Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
  .therapy-section {
    padding: 72px 0 80px 0;
    background-color: {{ section.settings.background_color }};
  }
  .therapy-section h2 {
    font-size: {{ section.settings.heading_font_size }}px;
    color: {{ section.settings.heading_color }};
    font-weight: 400;
    margin-bottom: 20px;
    line-height: 120%;
    text-align: center;
  }
  .therapy-section .subtitle {
    font-size: {{ section.settings.subtitle_font_size }}px;
    color: {{ section.settings.subtitle_color }};
    margin-bottom: 64px;
    line-height: 140%;
    text-align: center;
  }
  .cards-container {
    display: flex;
    gap: 26px;
    flex-wrap: wrap;
    justify-content: center;
  }
  .card {
    background-image: linear-gradient(180deg, #a8dbf680 0%, #ddf0f6ff 68.31%);
    border-radius: 24px;
    padding: 20px;
    max-width: 390px;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    text-align: left;
  }
  .card h3 {
    margin-top: 0;
    margin-bottom: 12px;
    font-weight: 400;
    line-height: 140%;
  }
  .card h4 {
    font-weight: 600;
    margin-bottom: 40px;
    line-height: 130%;
  }
  .details {
    display: flex;
    justify-content: space-between;
    gap: 16px;
  }
  .detail-item {
    text-align: center;
    flex: 1;
  }
  .detail-item img {
    width: 34px;
    height: 34px;
    margin-bottom: 16px;
  }
  .detail-item span {
    display: block;
    line-height: 1.3;
  }
  .border-left {
    border-left: 1px solid #005585;
    height: 94px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .therapy-section {
      padding: 40px 0;
    }
    .therapy-section h2 {
      font-size: 22px !important;
    }
    .therapy-section .subtitle {
      font-size: 14px !important;
      margin-bottom: 20px;
    }
    .cards-container {
      display: grid;
      grid-template-columns: 1fr;
      gap: 20px;
    }
    .custom-containerggg {
    padding: 0px 20px;
}
    .card {
      padding: 16px;
      margin: 0 auto;
    }
    .card h3 {
      font-size: 18px !important;
    }
    .card h4 {
      font-size: 20px !important;
    }
    .detail-item span {
      font-size: 14px !important;
    }
  }
</style>

<section class="therapy-section">
  <div class="custom-containerggg">
    <h2>{{ section.settings.heading }}</h2>
    <p class="subtitle">{{ section.settings.subtitle }}</p>
    <div class="cards-container">
      {% for block in section.blocks %}
        <div class="card">
          <div>
            <h3
              style="
                color: {{ block.settings.week_title_color }};
                font-size: {{ block.settings.week_title_font_size }}px;
              "
            >
              {{ block.settings.week_title }}
            </h3>
            <h4
              style="
                color: {{ block.settings.week_subtitle_color }};
                font-size: {{ block.settings.week_subtitle_font_size }}px;
              "
            >
              {{ block.settings.week_subtitle }}
            </h4>
          </div>
          <div class="details">
            <div class="detail-item">
              {% if block.settings.icon_mode != blank %}
                <img src="{{ block.settings.icon_mode | image_url }}" alt="Mode icon" />
              {% endif %}
              <span
                style="
                  color: {{ block.settings.mode_text_color }};
                  font-size: {{ block.settings.mode_text_font_size }}px;
                "
                class="mode"
              >
                {{ block.settings.mode_text }}
              </span>
            </div>
            <div class="border-left"></div>
            <div class="detail-item">
              {% if block.settings.icon_days != blank %}
                <img src="{{ block.settings.icon_days | image_url }}" alt="Days icon" />
              {% endif %}
              <span
                style="
                  color: {{ block.settings.days_text_color }};
                  font-size: {{ block.settings.days_text_font_size }}px;
                "
                class="days"
              >
                {{ block.settings.days_text }}
              </span>
            </div>
            <div class="border-left"></div>
            <div class="detail-item">
              {% if block.settings.icon_minutes != blank %}
                <img src="{{ block.settings.icon_minutes | image_url }}" alt="Minutes icon" />
              {% endif %}
              <span
                style="
                  color: {{ block.settings.minutes_text_color }};
                  font-size: {{ block.settings.minutes_text_font_size }}px;
                "
                class="minutes"
              >
                {{ block.settings.minutes_text }}
              </span>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
