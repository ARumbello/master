<div class="back-pain-relief-section">
   <div class="back-pain-relief-inner page-width">
	   <div class="heading-div">
         <h2>{{ section.settings.heading }}</h2>
       </div>
     <div class="img-box-row back-pain-relief">
		{%- for block in section.blocks -%}
	    <div class="img-box">
		   <div class="info-t">
		       <h3>{{ block.settings.subheading }}</h3>
			   <p>{{ block.settings.text_01 }}</p>
		   </div>
		   <div class="row-i">
		        <div class="img-icon">
		            <img src="https://cdn.shopify.com/s/files/1/0201/2450/0032/files/mingcute_settings-6-fill.svg?v=1709282547">
			        <p>{{ block.settings.mode }}</p>
		        </div>
				<div class="img-icon">
		            <img src="https://cdn.shopify.com/s/files/1/0201/2450/0032/files/mingcute_calendar-line.svg?v=1709282546">
			        <p>{{ block.settings.days }}</p>
		        </div>
		   </div>
		</div>
		{%- endfor -%}
   </div>
	 </div>
</div>

<style>
.back-pain-relief-section{
     background-color: #EAF6F8B2;
     padding-top:{{ section.settings.p_t }}px; 
     padding-bottom:{{ section.settings.p_b }}px;
}

.img-box-row {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    gap: 20px;
    margin: 50px auto;
}
.heading-div {
    text-align: center;
    width: 90%;
    margin: 0 auto;
}
.heading-div h2 {
    font-size: 38px;
    line-height: 48px;
    margin: 0 auto 10px;
    font-weight: 400;
}
.img-box {
    background: #fff;
    box-shadow:none;
    border-radius: 18px;
}
.img-box-row .info-t {
    width: 100%;
    padding: 20px;
    min-height: 100px;
    text-align: center;
}
.back-pain-relief-section .img-box-row .info-t {
    width: 100%;
    padding: 30px 20px 20px;
    text-align: left;
    min-height: 170px;
}
  .back-pain-relief-section .heading-div h2 {
    width: 100%;
}
.img-box-row.back-pain-relief .img-box {
    width: 33%;
    box-shadow: none;
    height: 300px;
    background-image: linear-gradient(to bottom, #b0def6, #b8e2f5, #c0e5f5, #c8e9f5, #d1ecf5, #d5edf5, #d9eff6, #ddf0f6, #ddf0f6, #ddf0f6, #ddf0f6, #ddf0f6);
}
.row-i {
    display: flex;
    justify-content: space-between;
    padding: 20px;
}
.img-icon {
    text-align: center;
    width: 50%;
    border-left: 1px solid #005585;
}
.img-icon:first-child {
    border: none;
}
.row-i img {
    width: 42px;
    margin: 0 auto;
    text-align: center;
    margin-bottom: 10px;
}
.img-box-row .info-t {
    width: 100%;
    padding: 20px;
    min-height: 100px;
    text-align: left;
}
.img-box-row.back-pain-relief  .info-t h3 {
    font-size: 24px;
    margin-bottom: 10px;
    color: #005585;
    font-weight: 500;
}
.img-box-row.back-pain-relief  .info-t p {
    font-size: 26px;
    font-weight: 600;
    color: #353535;
}
@media only screen and (max-width: 767px) {
.img-box-row {
    flex-direction: column;
}
.img-box-row.back-pain-relief .img-box {
    width: 100%;
}
.col.col-left h2 p {
    font-size: 26px!Important;
    line-height: 36px!Important;
}
.heading-div h2 {
    font-size: 24px!Important;
    line-height: 33px!Important;
    width: 100%!important;
    margin: 0 auto 10px;
}
}
@media only screen and (max-width: 1200px) {
.heading-div {
    width: 100%;
}
}
</style>


{% schema %}
{
    "name": "back-pain-relief",
    "settings": [
	  {
          "type": "richtext",
          "id": "heading",
          "label": "Heading"
      },
	  {
        "type": "range",
        "id": "p_t",
        "default": 50,
        "label": "Padding Top",
        "max": 300,
        "min": 0,
        "step": 5,
        "unit": "Px"
      }, {
        "type": "range",
        "id": "p_b",
        "default": 50,
        "label": "Padding Bottom",
        "max": 300,
        "min": 0,
        "step": 5,
        "unit": "Px"
      }
    ],
	 "blocks": [
      {
        "type": "image-box",
        "name": "image-box",
        "settings": [
		  {
            "type": "image_picker",
            "id": "img_01",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "subheading",
            "label": "Heading"
          },  
          {
            "type": "richtext",
            "id": "text_01",
            "label": "Content"
          },
		  {
            "type": "text",
            "id": "mode",
            "label": "Mode"
          },  
		  {
            "type": "text",
            "id": "days",
            "label": "Days"
          } 
        ]
      }
    ],
    "presets": [
        {
            "name": "back-pain-relief"
        }
    ]
}
{% endschema %}