
<div id="{{ section.id }}">
<div class="table-container" style="padding: {{ section.settings.table_padding_top_bottom }}px 0;">
  <h2 class="center-text table-head" style="font-size: {{ section.settings.heading_font_size }}px; color: {{ section.settings.heading_color }};">
    {{ section.settings.table_heading }}
  </h2>
  <table>
    <thead>
      <tr>
        <th class="col-feature"></th>
        <th class="neuromd-header col-18" style="background-color: {{ section.settings.product_cell_bg_color }};">
          <div class="product-header">
            {% if section.settings.product_logo %}
              <img src="{{ section.settings.product_logo | img_url: 'master' }}" alt="Product Logo">
            {% else %}
              <img src="{{ 'logo.svg' | asset_url }}" alt="Product Logo">
            {% endif %}
            <p class="product-extra" style="font-size: {{ section.settings.column_header_font_size }}px;">{{ section.settings.product_extra_text }}</p>
          </div>
        </th>
        <th class="col-26" style="font-size: {{ section.settings.column_header_font_size }}px;">{{ section.settings.competitor_1_name }}</th>
        <th class="col-26" style="font-size: {{ section.settings.column_header_font_size }}px;">{{ section.settings.competitor_2_name }}</th>
      </tr>
    </thead>
    <tbody>
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'feature_row' %}
            <tr {{ block.shopify_attributes }}>
              <td style="font-size: {{ section.settings.feature_font_size }}px; color: {{ section.settings.feature_text_color }};">{{ block.settings.feature_text }}</td>
              
              <td class="neuromd-cell" style="background-color: {{ section.settings.product_cell_bg_color }};">
                {% if block.settings.product_has_feature %}
                  <span class="icon check">
                    {% if section.settings.use_custom_check_icon and section.settings.check_icon_image %}
                      <img src="{{ section.settings.check_icon_image | img_url: 'master' }}" alt="Check" width="{{ section.settings.icon_size }}" height="{{ section.settings.icon_size }}">
                    {% else %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="{{ section.settings.icon_size }}" height="{{ section.settings.icon_size }}" fill="{{ section.settings.check_icon_color }}" role="presentation">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"></path>
                      </svg>
                    {% endif %}
                  </span>
                {% else %}
                  <span class="icon cross">
                    {% if section.settings.use_custom_cross_icon and section.settings.cross_icon_image %}
                      <img src="{{ section.settings.cross_icon_image | img_url: 'master' }}" alt="Cross" width="{{ section.settings.icon_size }}" height="{{ section.settings.icon_size }}">
                    {% else %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="{{ section.settings.icon_size }}" height="{{ section.settings.icon_size }}" fill="{{ section.settings.cross_icon_color }}" role="presentation" style="background-color: {{ section.settings.cross_icon_bg_color }}; border-radius: 50%">
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"></path>
                      </svg>
                    {% endif %}
                  </span>
                {% endif %}
              </td>
              
              <td>
                {% if block.settings.competitor_1_has_feature %}
                  <span class="icon check">
                    {% if section.settings.use_custom_check_icon and section.settings.check_icon_image %}
                      <img src="{{ section.settings.check_icon_image | img_url: 'master' }}" alt="Check" width="{{ section.settings.icon_size }}" height="{{ section.settings.icon_size }}">
                    {% else %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="{{ section.settings.icon_size }}" height="{{ section.settings.icon_size }}" fill="{{ section.settings.check_icon_color }}" role="presentation">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"></path>
                      </svg>
                    {% endif %}
                  </span>
                {% elsif block.settings.competitor_1_custom_text != blank %}
                  <span class="special-text center-text" style="font-size: {{ section.settings.custom_text_font_size }}px; color: {{ section.settings.custom_text_color }};">{{ block.settings.competitor_1_custom_text }}</span>
                {% else %}
                  <span class="icon cross">
                    {% if section.settings.use_custom_cross_icon and section.settings.cross_icon_image %}
                      <img src="{{ section.settings.cross_icon_image | img_url: 'master' }}" alt="Cross" width="{{ section.settings.icon_size }}" height="{{ section.settings.icon_size }}">
                    {% else %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="{{ section.settings.icon_size }}" height="{{ section.settings.icon_size }}" fill="{{ section.settings.cross_icon_color }}" role="presentation" style="background-color: {{ section.settings.cross_icon_bg_color }}; border-radius: 50%">
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"></path>
                      </svg>
                    {% endif %}
                  </span>
                {% endif %}
              </td>
              
              <td>
                {% if block.settings.competitor_2_has_feature %}
                  <span class="icon check">
                    {% if section.settings.use_custom_check_icon and section.settings.check_icon_image %}
                      <img src="{{ section.settings.check_icon_image | img_url: 'master' }}" alt="Check" width="{{ section.settings.icon_size }}" height="{{ section.settings.icon_size }}">
                    {% else %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="{{ section.settings.icon_size }}" height="{{ section.settings.icon_size }}" fill="{{ section.settings.check_icon_color }}" role="presentation">
                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"></path>
                      </svg>
                    {% endif %}
                  </span>
                {% elsif block.settings.competitor_2_custom_text != blank %}
                  <span class="special-text center-text" style="font-size: {{ section.settings.custom_text_font_size }}px; color: {{ section.settings.custom_text_color }};">{{ block.settings.competitor_2_custom_text }}</span>
                {% else %}
                  <span class="icon cross">
                    {% if section.settings.use_custom_cross_icon and section.settings.cross_icon_image %}
                      <img src="{{ section.settings.cross_icon_image | img_url: 'master' }}" alt="Cross" width="{{ section.settings.icon_size }}" height="{{ section.settings.icon_size }}">
                    {% else %}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" width="{{ section.settings.icon_size }}" height="{{ section.settings.icon_size }}" fill="{{ section.settings.cross_icon_color }}" role="presentation" style="background-color: {{ section.settings.cross_icon_bg_color }}; border-radius: 50%">
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"></path>
                      </svg>
                    {% endif %}
                  </span>
                {% endif %}
              </td>
            </tr>
        {% endcase %}
      {% endfor %}
    </tbody>
  </table>
</div>
</div>
