        },
        {
          "type": "feature_row",
          "settings": {
            "feature_text": "Deep penetration",
            "product_has_feature": true,
            "competitor_1_has_feature": false,
            "competitor_2_has_feature": false
          }
        },
        {
          "type": "feature_row",
          "settings": {
            "feature_text": "Clinically validated",
            "product_has_feature": true,
            "competitor_1_has_feature": false,
            "competitor_2_has_feature": false
          }
        },
        {
          "type": "feature_row",
          "settings": {
            "feature_text": "Targets motor nerves",
            "product_has_feature": true,
            "competitor_1_has_feature": false,
            "competitor_2_has_feature": false,
            "competitor_2_custom_text": "sensory nerves only"
          }
        }
      ]
    }
  ]
}
