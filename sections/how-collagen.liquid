<div class="container">
  <div class="row">
    <div class="col-md-12">
      {%- if section.settings.title != blank -%}
      <div class="title-wrapper text-center">
        <h2 class="heading"><span>{{ section.settings.title }}</span></h2>
      </div>
      {%- endif -%}
      {%- if section.settings.subtitle != blank -%}
      <div class="title-wrapper text-center">
        <h4 class="sub-heading"><span>{{ section.settings.subtitle }}</span></h4>
      </div>
      {%- endif -%}
      <div class="news-text-wrapper">
        {%- for block in section.blocks -%}
           {% if block.settings.news_label != blank %}
              <div class="news-text">

					{{ block.settings.news_label }}

              </div>
            {%- endif -%}
        {%- endfor -%}
      </div>
      {% if section.settings.button_label != blank %}
      <div class="text-center">
        <a {% if section.settings.link != blank %}href="{{ section.settings.link }}"{% endif %} class="button">
          {{ section.settings.button_label }}
        </a>
      </div>
      {% endif %}
      
    </div>
  </div>
</div>

<style>
  #shopify-section-{{section.id}} .heading { 
    text-transform: none;
    {% if section.settings.color_heading != blank %}
    color:{{ section.settings.color_heading }};
    {% endif %}
    font-size: {{ section.settings.font_size_heading }};
    font-weight: {{ section.settings.font_weight_heading }};
    line-height: 1.2;
    margin-bottom: 20px;    
  }
  #shopify-section-{{section.id}} .sub-heading { 
    text-transform: none;
    font-size: 30px;
    font-weight: {{ section.settings.font_weight_heading }};
    line-height: 1.2;
    margin-bottom: 50px;
    color: #0FA3FA;
  }

  
  #shopify-section-{{section.id}}{
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    {%- if section.settings.background != blank -%}
    background-color: {{ section.settings.background }};
    {%- endif -%}
  }
  .news-text-wrapper{
  display: flex;
    flex-wrap: wrap;
    max-width: 1000px;
    margin: auto;
  }
  .news-text{
    font-size: 20px;
    width: 25%;
    padding-right: 5%;
    line-height: 1.2;
    padding-left: 2%;
    border-left: 1px solid #707070;
    margin-bottom: 70px;
    font-weight: 500;
  }
  .how-collagen .button{
	border-radius: 3px;
    text-decoration: none;
    padding: 10px 74px;  
    background: white !important;
    color: #0FA3FA !important;
  }
  .how-collagen .button:hover{
  background: #0FA3FA !important;
    color: white !important;
  }
  
  @media(max-width: 767px){
    #shopify-section-{{section.id}}{
      padding-top: {{ section.settings.padding_top_mob }}px;
      padding-bottom: {{ section.settings.padding_bottom_mob }}px;
    }
    #shopify-section-{{section.id}} .heading {
      font-size: 35px;
    }
    .news-text{
      width: 50%;
      margin-bottom: 50px;
      font-size: 20px;
    }
  }
  
  @media(max-width: 459px){
    .how-collagen .button{
/*     	width: 100%;
    display: block; */
      padding: 10px 30px;
    }
   
  }
  </style>

{% schema %}
  {
    "name": "How collgen",
    "class" : "how-collagen",
    "settings": [
