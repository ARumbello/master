      "type": "box",
      "name": "Feature-Video-Box",
      "settings": [
        {
          "type": "video",
          "id": "video",
          "label": "Featured video"
        },
        {
          "type": "color",
          "id": "bg-color",
          "label": "Feed Box Bg Color",
          "default": "#4B4566"
        },
        {
          "type": "text",
          "id": "step-text",
          "label": "Step Text",
          "default": "Step 1"
        },
        {
          "type": "range",
