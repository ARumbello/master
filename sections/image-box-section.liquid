<div class="image-box-section">
   <div class="image-box-inner {{ section.settings.section_css_class }}">
	   <div class="heading-div">
         <h2>{{ section.settings.heading }}</h2>
		<p>{{ section.settings.text }}</p>
       </div>

     {% if section.settings.show_slider == false %}
     <div class="back-pain-row desktop">
		{%- for block in section.blocks -%}
	    <div class="img-box">
		   <img src="{{ block.settings.img_01 | img_url: 'master'  }}">
		   <div class="info-t">
		       <h3>{{ block.settings.subheading }}</h3>
			   <p>{{ block.settings.text_01 }}</p>
		   </div>
		</div>
		{%- endfor -%}
	 </div>
     {% endif %}

     <div class="back-pain-row mobile">
		{%- for block in section.blocks -%}
	    <div class="img-box">
		   <img src="{{ block.settings.img_01 | img_url: 'master'  }}">
		   <div class="info-t">
		       <h3>{{ block.settings.subheading }}</h3>
			   <p>{{ block.settings.text_01 }}</p>
		   </div>
		</div>
		{%- endfor -%}
	 </div>

   </div>
	 <div class="col-bottom">
	   <p class="extra">{{ section.settings.extra }}</p>
   </div>
</div>

<style>
.image-box-section{
     background-color: {{ section.settings.color_bg }};
     padding-top:{{ section.settings.p_t }}px; 
     padding-bottom:{{ section.settings.p_b }}px;
     position: relative;
}
  .image-box-section:before {
    top: 0;
    right: 0;
    position: absolute;
    content: '';
    width: 560px;
    height: 560px;
    background: url("https://cdn.shopify.com/s/files/1/0201/2450/0032/files/Group_2464_1.svg?v=1709300491");
    background-repeat: no-repeat;
    background-size: contain;
    background-position: right;
}
.image-box-inner {
    max-width: 1280px;
    margin: 0 auto;
    width: calc(100% - 40px);
}
.image-box-section .back-pain-row.desktop {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 20px;
    margin: 50px auto;
}
.image-box-section .back-pain-row.mobile{
    display: none;
}
.heading-div {
    text-align: center;
    width: 100%;
    margin: 0 auto;
}
.heading-div h2 {
    font-size: 38px;
    line-height: 45px;
    width: 36%;
    margin: 0 auto 10px;
}
.col-bottom {
    text-align: center;
}
.col-bottom a {
    color: #000;
}
.back-pain-row  .img-box {
    background: #fff;
    box-shadow: rgba(50, 50, 93, 0.25) 0px 6px 12px -2px, rgba(0, 0, 0, 0.3) 0px 3px 7px -3px;
    border-radius: 18px;
    border-top-left-radius: 40px;
    border-top-right-radius: 40px;
    width: 25%;
}
  .back-pain-row  .img-box img {
    width: 100%;
}
.back-pain-row .info-t {
    width: 100%;
    padding: 20px;
    min-height: 100px;
    text-align: center;
}
.back-pain-row {
    width: 70%;
}
.image-box-section ul.slick-dots {
    display: flex!important;
    justify-content: center;
    gap: 9px;
    margin-left: 0;
}
.image-box-section .back-pain-row.mobile ul.slick-dots li {
    width: 10px;
    height: 10px;
    border-radius: 50px;
    color: transparent;
}
::marker {
    display: none!important;
    background: transparent;
    color: transparent;
}
@media only screen and (max-width: 1200px){
.heading-div h2 {;
    width: 70%!important;
}
}
@media(max-width:992px){
    .image-box-section .back-pain-row.desktop {
    display:none;
}
.image-box-section .back-pain-row.mobile {
    display: block;
    width: 100%;
}
.image-box-section .back-pain-row.mobile .slick-slide {
    margin: 0 10px;
}
.image-box-section .image-box-inner.back-pain {
    width: 100%;
}
.image-box-section .back-pain-row.mobile .slick-list {
    padding: 0 30px;
    padding-bottom: 30px;
}
.image-box-section .back-pain-row.mobile ul.slick-dots li {
    background-color: #ffffff;
    border: 1px solid #012940;
    opacity: 1;
}
.image-box-section .back-pain-row.mobile ul.slick-dots li.slick-active {
    background-color: #012940;
}
.image-box-section .heading-div h2 {
    width: 100%;
}
.image-box-section .heading-div {
    margin-bottom: 35px;
}
}
  {% if section.settings.show_slider %}
    .image-box-section .back-pain-row.mobile {
      display: block !important;
      width: 100%;
      
    }
    .image-box-section .back-pain-row.mobile .slick-slide {
      margin: 0 10px;
    }
  {% endif %}
</style>
<script>
 $('.back-pain-row.mobile').slick({
    dots: true,
    infinite: true,
    speed: 300,
    slidesToShow: 6,
    centerMode:false,
    arrows:false,
    responsive: [
      {
        breakpoint: 1024,
        settings: {
          slidesToShow: 4,
          slidesToScroll: 1,
          dots: true
        }
      },
      {
        breakpoint: 768,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 1,
          dots: true
        }
      }
    ]

 });
</script>

{% schema %}
{
    "name": "image-box-section",
    "settings": [
	  {
        "type": "color",
        "id": "color_bg",
        "label": "background color",
        "default": "#fff"
      },
	  {
          "type": "richtext",
          "id": "heading",
          "label": "Heading"
      },
	  {
          "type": "richtext",
          "id": "text",
          "label": "Sub Heading"
      },
	  {
          "type": "richtext",
          "id": "extra",
          "label": "Bottom text"
      },
	  {
    "type": "text",
    "id": "section_css_class",
    "label": {
      "en": "Section CSS Class"
    },
    "default": {
      "en": "Type your own CSS class"
    }
  },
      {
        "type": "checkbox",
        "id": "show_slider",
        "default": false,
        "label": "Show Slider in Desktop"
      },
	  {
        "type": "range",
        "id": "p_t",
        "default": 50,
        "label": "Padding Top",
        "max": 300,
        "min": 0,
        "step": 5,
        "unit": "Px"
      }, {
        "type": "range",
        "id": "p_b",
        "default": 50,
        "label": "Padding Bottom",
        "max": 300,
        "min": 0,
        "step": 5,
        "unit": "Px"
      }
    ],
	 "blocks": [
      {
        "type": "image-box",
        "name": "image-box",
        "settings": [
		  {
            "type": "image_picker",
            "id": "img_01",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "subheading",
            "label": "Heading"
          },  
          {
            "type": "richtext",
            "id": "text_01",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
        {
            "name": "image-box-section"
        }
    ]
}
{% endschema %}