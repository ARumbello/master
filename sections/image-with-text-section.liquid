<div class="image-with-text-section">
   <div class="image-text-inner txt1">
     <div class="col col-right">
	    <img src="{{ section.settings.img_02 | img_url: 'master'  }}">
	 </div>
     <div class="col col-left">
	    <h2>{{ section.settings.heading }}</h2>
		<p>{{ section.settings.text }}</p>
		{%- for block in section.blocks -%}
		   <div class="info-t1">
			    <img src="https://cdn.shopify.com/s/files/1/0201/2450/0032/files/Vector_2x_62c2c6b0-c660-4613-ae1c-3b36126127ec.png?v=1710928726"> 
             <p>{{ block.settings.text_01 }}</p>
		   </div>
		{%- endfor -%}
	 </div>
   </div>
</div>

<style>
  .image-with-text-section{
     background-color: {{ section.settings.color_bg }};
     padding-top:{{ section.settings.p_t }}px; 
     padding-bottom:{{ section.settings.p_b }}px;
     position: relative;
  }
.image-with-text-section:before {
    top: 0;
    right: 0;
    position: absolute;
    content: '';
    width: 560px;
    height: 560px;
    background: url("https://cdn.shopify.com/s/files/1/0201/2450/0032/files/Group_2464_1.svg?v=1709300491");
    background-repeat: no-repeat;
    background-size: contain;
    background-position: right;
}
.image-text-inner {
    width: calc(100% - 40px);
    margin: 0 auto;
    max-width: 1240px;
    display: flex;
    justify-content: space-between;
    gap: 20px;
    align-items: center;
}

.info-box img {
    width: 25px;
    height: 25px;
    object-fit: contain;
    margin-right: 20px;
    margin-top: 10px;
}
.info-box {
    display: flex;
    justify-content: space-between;
    background: #fff;
    border: 1px solid #002F4933;
    margin: 30px 0;
    padding: 20px;
    border-radius: 20px;
}
.col.col-left h2 p {
    font-size: 34px;
    color: #000;
    margin-bottom: 10px;
}
.info-t h3 {
    font-size: 20px;
    margin-bottom: 10px;
}
.button.btn-p {
    background: #002F49!important;
    color: #fff!important;
    display: inline-block;
    border: 1px solid #002F49!important;
    border-radius: 4px;
    margin-top: 10px;
    padding: 10px 20px;
}
.button.btn-p a {
    color: #fff;
    text-decoration: none;
    margin-right: 8px;
}
.col.col-right img {
    width: 100%;
}
.info-t1 {
    display: flex;
    align-items: center;
    margin-bottom: 10px;
}
.info-t1 img {
    width: 20px;
    height: 20px;
    object-fit: contain;
    margin-right: 20px;
}
  .image-text-inner  .col.col-left {
    padding-left: 60px;
}
@media(max-width:767px){
  .image-text-inner  .col.col-left {
    padding-left: 0px;
}
  .image-text-inner {
   position: relative;
    z-index: 2;
}
  }
</style>


{% schema %}
{
    "name": "image-with-text-section",
    "settings": [
      {
        "type": "color",
        "id": "color_bg",
        "label": "background color",
        "default": "#f2f2f2"
      },
	  {
          "type": "richtext",
          "id": "heading",
          "label": "Heading"
      },
	  {
          "type": "richtext",
          "id": "text",
          "label": "subheading"
      },
	  {
            "type": "image_picker",
            "id": "img_02",
            "label": "Image"
      },
      {
          "type": "text",
          "id": "btn-label",
          "label": "label"
      },
      {
          "type": "url",
          "id": "btn-link",
          "label": "link"
      },
	  {
        "type": "range",
        "id": "p_t",
        "default": 50,
        "label": "Padding Top",
        "max": 300,
        "min": 0,
        "step": 5,
        "unit": "Px"
      }, {
        "type": "range",
        "id": "p_b",
        "default": 50,
        "label": "Padding Bottom",
        "max": 300,
        "min": 0,
        "step": 5,
        "unit": "Px"
      }
    ],
	 "blocks": [
      {
        "type": "image-box",
        "name": "image-box",
        "settings": [
		  
          {
            "type": "richtext",
            "id": "text_01",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
        {
            "name": "image-with-text-section"
        }
    ]
}
{% endschema %}