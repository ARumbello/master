<script>
  jQuery(document).ready(function ($) {
       if (jQuery(window).width() < 768) {
       }else{
         jQuery('.js-qty__adjust.js-qty__adjust--plus').on('click',function(){
           var num = parseInt($(".js-qty__wrapper input[name=quantity]").val()) + 1; 
           jQuery(".js-qty__wrapper input[name=quantity]").val(num);
         })
         $('.js-qty__adjust.js-qty__adjust--minus').on('click', function() {
           var nm = parseInt(jQuery(".js-qty__wrapper input[name=quantity]").val());
           if (nm > 1) {
              var num = nm - 1; 
              jQuery(".js-qty__wrapper input[name=quantity]").val(num);  
           }
         });   
       }
      jQuery('.cart-div button.add-to-cart').on("click",function(){
         $(this).attr("disabled")
         var vid = jQuery('select.product-single__variants').val();
         var qty = jQuery(".product__quantity input[name=quantity]").val();
         jQuery.ajax({
           type: 'POST',
           url: '/cart/add.js',
           data: {
             quantity: qty,
             id: vid
           },
           dataType: 'json', 
           success: function (data) { 
              window.location.href='/cart';
           } 
        });
       })
     
  })
</script>