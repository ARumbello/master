<div class="review-slider-section">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                {% if section.settings.heading != blank %}
                    <h2 class="reviews-heading">
                        {% render 'multilang' with section.settings.heading %}
                    </h2>
                {% endif %}
            </div>
            <div class="col-12">
                <div class="reviewslider new-dots with-arrow">
                    {% for block in section.blocks %}
                        <div class="reviewslider_wrapper">
                            <div class="quote-img">
                                {% if block.settings.quoteimage != blank %}
                                    {%- assign img_url = block.settings.quoteimage | img_url: '33x33', crop: 'center' -%}
                                    <img data-srcset="https:{{ img_url }}"
                                         alt="{{ block.settings.quoteimage.alt | default: shop.name }}" {% render 'lazy_load' %}>
                                {% endif %}
                            </div>
                            <div class="review_content">
                                <h4>{{ block.settings.reviewtitle }}</h4>
                                <p>{{ block.settings.reviewcontent }}</p>
                                <div class="author-verified">
                                    <h3>{{ block.settings.reviewauthor }}</h3>
                                    <div class="verified-image">
                                        {% if block.settings.verifiedimage != blank %}
                                            {%- assign img_url = block.settings.verifiedimage | img_url: '33x33', crop: 'center' -%}
                                            <img data-srcset="https:{{ img_url }}"
                                                 alt="{{ block.settings.verifiedimage.alt | default: shop.name }}" {% render 'lazy_load' %}>
                                        {% endif %}  </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .review-slider-section {
        padding: 30px 0;
    }

    .reviewslider .slick-slide {
        margin: 0 10px;
    }

    .reviewslider .slick-list.draggable {
        margin-bottom: 20px;
    }

    .review-slider {
        padding: 0 0 50px 0;
    }

    .reviews-heading {
        color: #242426;
        font-family: Poppins;
        font-size: 36px;
        font-style: normal;
        text-align: Center;
        font-weight: 700;
        line-height: 120%;
    }

    .quote-img img {
        width: 32px;
        height: 32px;
    }

    .quote-img {
        display: inline-block;
    }

    .reviewslider {
        margin-top: 60px;
    }

    .reviewslider_wrapper {
        padding: 20px;
        border: 1px solid #CBCBCB;
        border-radius: 8px;
        min-height: 470px !important;
    }

    .review_content h4 {
        color: #242426;
        font-family: Poppins;
        font-size: 20px;
        font-style: normal;
        font-weight: 600;
        line-height: 140%;
        margin: 15px 0;
    }

    .review_content p {
        color: #242426;
        font-family: Poppins;
        font-size: 18px;
        font-style: normal;
        font-weight: 400;
        line-height: 140%;
    }

    .author-verified {
        width: 100%;
        display: flex;
        justify-content: space-around;
        margin-top: 20px;
        align-items: center;
    }

    .review_content h3 {
        color: #242426;
        font-family: Poppins;
        font-size: 16px;
        font-style: normal;
        font-weight: 600;
        line-height: 140%;
        width: 80%;
    }

    @media screen and (min-width: 100px) and (max-width: 640px) {
        .review-slider-section {
            padding: 0px;
        }

        .reviews-heading {
            font-size: 28px;
        }

        .reviewslider .slick-arrow {
            display: none !important;
        }

        .reviewslider {
            margin-top: 40px;
        }

        .reviewslider .slick-slide {
            margin: 0 5px;
        }

        .reviewslider_wrapper {
            height: 600px !important;
        }
    }

</style>
<script type="text/javascript">
	jQuery(document).ready(function ($) {
		$('.reviewslider').slick({
			infinite: true,
			centerMode: true,
			slidesToShow: 3,
			slidesToScroll: 2,
			dots: true,
			arrows: true,
			responsive: [
				{
					breakpoint: 1024,
					settings: {
						slidesToShow: 2,
						slidesToScroll: 2
					}
				},
				{
					breakpoint: 768,
					settings: {
						slidesToShow: 2,
						slidesToScroll: 2
					}
				},
				{
					breakpoint: 640,
					settings: {
						slidesToShow: 1,
						centerMode: false,
						slidesToScroll: 1
					}
				}
			]
		});
	});
</script>
{% schema %}
{
  "name": "reviews slider",
  "class": "prod-video-reviews",
  "max_blocks": 20,
  "settings": [
    {
      "type": "header",
      "content": "Heading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Title"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "quoteimage",
          "label": "Quote Icon"
        },
        {
          "type": "text",
          "id": "reviewtitle",
          "label": "Review Title"
        },
        {
          "type": "richtext",
          "id": "reviewcontent",
          "label": "Review Content"
        },
        {
          "type": "text",
          "id": "reviewauthor",
          "label": "Review Author"
        },
        {
          "type": "image_picker",
          "id": "verifiedimage",
          "label": "Verified image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Reviews Slider"
    }
  ]
}
{% endschema %}