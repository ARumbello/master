<div class="text-with-icon-section">
   <div class="text-with-icon-inner page-width">
        <div class="text-with-icon-heading">
	    <h2>{{ section.settings.heading }}</h2>
		<p>{{ section.settings.text }}</p>
		</div>
     <div class="img-div-outer">
		{%- for block in section.blocks -%}
	    <div class="img-div">
		   <img src="{{ block.settings.img_01 | img_url: 'master'  }}">
		   <div class="info-div">
			   {{ block.settings.text_01 }}
		   </div>
		</div>
		{%- endfor -%}
       </div>
	 </div>
</div>

<style>
.text-with-icon-section{
     background-color: {{ section.settings.color_bg }};
     padding-top:{{ section.settings.p_t }}px; 
     padding-bottom:{{ section.settings.p_b }}px;
     position: relative;
}
.text-with-icon-section:before {
    left: 0;
    top: 37%;
    position: absolute;
    content: '';
    width: 100%;
    height: 400px;
    background: url("https://cdn.shopify.com/s/files/1/0201/2450/0032/files/Group_2463.svg?v=1709281978");
    background-repeat: no-repeat;
    z-index: 0;
}
.text-with-icon-inner {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
	gap:20px;
}
.text-with-icon-heading {
    width: 50%;
}
.img-div-outer {
    width: 50%;
}
.text-with-icon-heading h2 {
    font-size: 38px;
    line-height: 48px;
    color: #fff;
    margin-bottom: 10px;
}
.text-with-icon-heading p {
    font-size: 20px;
    color: #fff;
}
.img-div {
    background: #EAF6F8;
    border-radius: 24px;
    margin-bottom: 20px;
    padding: 20px;
    display: flex;
    align-items: center;
}
.img-div img {
    width: 28px;
    height: 28px;
    margin: 3px 20px 0 10px;
}
  @media only screen and (max-width: 767px) {
.text-with-icon-inner {
    flex-direction: column;
}
.text-with-icon-heading {
    width: 100%;
}
.img-div-outer {
    width: 100%;
}
.text-with-icon-heading h2 {
    font-size: 24px;
    line-height: 34px;
}
}
</style>


{% schema %}
{
    "name": "text-with-icon-section",
    "settings": [
	  {
        "type": "color",
        "id": "color_bg",
        "label": "background color",
        "default": "#fff"
      },
	  {
          "type": "richtext",
          "id": "heading",
          "label": "Heading"
      },
	  {
          "type": "richtext",
          "id": "text",
          "label": "Heading"
      },
	  {
        "type": "range",
        "id": "p_t",
        "default": 50,
        "label": "Padding Top",
        "max": 300,
        "min": 0,
        "step": 5,
        "unit": "Px"
      }, {
        "type": "range",
        "id": "p_b",
        "default": 50,
        "label": "Padding Bottom",
        "max": 300,
        "min": 0,
        "step": 5,
        "unit": "Px"
      }
    ],
	 "blocks": [
      {
        "type": "image-box",
        "name": "image-box",
        "settings": [
		  {
            "type": "image_picker",
            "id": "img_01",
            "label": "Image"
          }, 
          {
            "type": "richtext",
            "id": "text_01",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
        {
            "name": "text-with-icon-section"
        }
    ]
}
{% endschema %}