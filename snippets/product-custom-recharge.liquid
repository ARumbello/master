    position: relative;
    padding: 0 5px;
  }
  .each-variant img{
  	max-width: 100%
  }
  .each-variant .variant-title{
  	font-weight: bold;
    margin-bottom: 10px;
  }
  .each-variant .variant-price{
    box-shadow: 2px 3px 5px 2px rgb(0 0 0 / 10%);
    border-radius: 15px;
    height: 30px;
    line-height: 30px;
  }
  .each-variant.active .variant-price{
  	background: #0FA3FA;
    color: #fff;
