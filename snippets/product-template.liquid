<script type="text/javascript">
  document.addEventListener('DOMContentLoaded', function() {
    // Your existing tab script
    var tabItems = document.querySelectorAll('ul.shopify-tabs > li');
    tabItems.forEach(function(tabItem) {
        tabItem.addEventListener('click', function() {
            var tabId = this.getAttribute('data-tab');
            tabItems.forEach(function(item) { item.classList.remove('current'); });
            var tabContents = document.querySelectorAll('.shopify-tab-content');
            tabContents.forEach(function(content) { content.classList.remove('current'); });
            this.classList.add('current');
            document.getElementById(tabId).classList.add('current');
        });
    });

    // Your existing accordion script
    if (window.jQuery) {
      jQuery(document).ready(function ($) {
       jQuery('[sm-accordion]').each(function () {
          var thisThing = $(this);
          thisThing.find('.faqAccordion-Title').on('click', function () {
            var target = thisThing.find('.faqAccordion_container');
            if (target.is(':visible')) {
              target.slideUp();
             jQuery(this).find('span').removeClass('active');
            } else {
              target.slideDown();
              jQuery(this).find('span').addClass('active');
            }
          });
        });
      });
    }

    // =======================================================================
    // START: QUANTITY CONTROLS
    // =======================================================================
    function initializeQuantityControls() {
      const quantityWrappers = document.querySelectorAll('.js-qty__wrapper');
      
      quantityWrappers.forEach(function(wrapper) {
        const minusBtn = wrapper.querySelector('.js-qty__adjust--minus');
        const plusBtn = wrapper.querySelector('.js-qty__adjust--plus');
        const quantityInput = wrapper.querySelector('.js-qty__num');
        
        if (!minusBtn || !plusBtn || !quantityInput) return;
        
        minusBtn.addEventListener('click', function() {
          let currentValue = parseInt(quantityInput.value) || 1;
          let minValue = parseInt(quantityInput.getAttribute('min')) || 1;
          if (currentValue > minValue) {
            quantityInput.value = currentValue - 1;
            quantityInput.dispatchEvent(new Event('change'));
          }
        });
        
        plusBtn.addEventListener('click', function() {
          let currentValue = parseInt(quantityInput.value) || 1;
          quantityInput.value = currentValue + 1;
          quantityInput.dispatchEvent(new Event('change'));
        });
        
        // Ensure valid quantity value
        quantityInput.addEventListener('change', function() {
          let value = parseInt(this.value) || 1;
          let minValue = parseInt(this.getAttribute('min')) || 1;
          if (value < minValue) {
            this.value = minValue;
          }
        });
      });
    }

    // Initialize quantity controls
    initializeQuantityControls();

    // =======================================================================
    // IMPROVED ADD TO CART FUNCTIONALITY
    // =======================================================================
    function initializeAddToCart() {
      // Find all add to cart buttons
      const addToCartButtons = document.querySelectorAll('[data-add-to-cart]');

      addToCartButtons.forEach(function(addToCartButton) {
        addToCartButton.addEventListener('click', function(event) {
          event.preventDefault();

          const button = this;
          const form = button.closest('form');

          if (!form) {
            console.error('Add to Cart button is not inside a form.');
            return;
          }

          // Get variant ID and quantity
          const variantIdInput = form.querySelector('[name="id"]') || document.querySelector('[name="id"]');
          const quantityInput = document.querySelector('.js-qty__num') || document.querySelector('[name="quantity"]') || { value: '1' };

          if (!variantIdInput) {
            console.error('Could not find variant input.');
            return;
          }
          
          const variantId = variantIdInput.value;
          const quantity = parseInt(quantityInput.value, 10) || 1;

          // Show loading state
          button.disabled = true;
          const buttonTextSpan = button.querySelector('[data-add-to-cart-text]');
          const originalButtonText = buttonTextSpan ? buttonTextSpan.innerHTML : button.textContent;
          
          if (buttonTextSpan) {
            buttonTextSpan.textContent = 'Adding...';
          } else {
            button.textContent = 'Adding...';
          }

          // Build form data
          const formData = {
            'items': [{
              'id': variantId,
              'quantity': quantity
            }]
          };

          // Send request
          fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
          })
          .then(response => {
            if (response.ok) {
              return response.json();
            } else {
              return response.json().then(errorData => {
                throw new Error(errorData.description || 'Something went wrong');
              });
            }
          })
          .then(cart => {
            // SUCCESS
            if (buttonTextSpan) {
              buttonTextSpan.textContent = 'Added!';
            } else {
              button.textContent = 'Added!';
            }

            // Update cart drawer/count
            if (window.theme && window.theme.CartDrawer && window.theme.CartDrawer.buildCart) {
              window.theme.CartDrawer.buildCart();
            }
            
            // Legacy cart event for compatibility
            document.dispatchEvent(new CustomEvent('cart:build'));

            // Reset button
            setTimeout(() => {
              button.disabled = false;
              if (buttonTextSpan) {
                buttonTextSpan.innerHTML = originalButtonText;
              } else {
                button.textContent = originalButtonText.replace(/<[^>]*>/g, '');
              }
            }, 1500);
          })
          .catch((error) => {
            // ERROR
            console.error('Add to cart error:', error);
            const errorText = error.message.substring(0, 20);
            
            if (buttonTextSpan) {
              buttonTextSpan.textContent = errorText;
            } else {
              button.textContent = errorText;
            }

            setTimeout(() => {
              button.disabled = false;
              if (buttonTextSpan) {
                buttonTextSpan.innerHTML = originalButtonText;
              } else {
                button.textContent = originalButtonText.replace(/<[^>]*>/g, '');
              }
            }, 3000);
          });
        });
      });
    }

    // Initialize add to cart
    initializeAddToCart();
    // =======================================================================
    // END: ADD TO CART AND QUANTITY FIXES
    // =======================================================================
  });
</script>
 
