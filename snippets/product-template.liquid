                 <!------------product-icon-ends------------------------>

                  {% form 'product', product %}
                    <!-- HC - Shop Pay Installments Banner - 16 May '22 -->
                    <div class="hc-shop-pay-installments">
                      {{ form | payment_terms }}
                    </div>
                    {% endform %}
                              
                  
                  {%- when 'contact' -%}
