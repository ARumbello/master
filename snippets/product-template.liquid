	                  <div class="iconBox">
	                     <img src="{{ block.settings.image_03 | img_url: 'master'  }}">
		                 <p>{{ block.settings.text_13 }}</p>
	                  </div>
	                 {%- endif -%}
	                 {%- endfor -%} 
                    </div>
